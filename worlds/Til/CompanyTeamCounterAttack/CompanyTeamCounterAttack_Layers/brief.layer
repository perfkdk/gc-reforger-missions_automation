 U5_Command {
  coords 0 0 0
  m_sTitle "V. COMMAND AND CONTROL"
  m_sDescriptionLayout "{41DAF7B7061DC0BC}UI/MissionDescription/DescriptionEditable.layout"
  m_sTextData "<b>Company</b>"\
  "Black 6 - Coy CDR"\
  "Black 5 - Coy XO"\
  ""\
  "<b>1st Platoon (Abrams)</b>"\
  "Red 1 - PL"\
  "Red 2 - 2nd tank"\
  "Red 3 - 3rd tank"\
  "Red 4 - PSG"\
  ""\
  "<b>2nd Platoon (Abrams)</b>"\
  "White 1 - PL"\
  "White 2 - 2nd tank"\
  "White 3 - 3rd tank"\
  "White 4 - PSG"\
  ""\
  "<b>3rd Platoon (Bradley)</b>"\
  "Blue 1 - PL"\
  "Blue 2 - 2nd vehicle"\
  "Blue 3 - 3rd vehicle"\
  "Blue 4 - PSG"
  m_aVisibleForFactions {
